@model TallerPICANetCore.Models.Contacto
@{
    ViewBag.Title = "Contacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Contacto</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                @using (Html.BeginForm("Contacto", "Contacto", FormMethod.Post))
                {
                    <fieldset>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.LabelFor(a => a.Nombre)
                                @Html.TextBoxFor(a => a.Nombre, new { @class = "form-control", placeholder = "Nombre" })
                                @Html.ValidationMessageFor(a => a.Nombre, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.LabelFor(a => a.Apellido)
                                @Html.TextBoxFor(a => a.Apellido, new { @class = "form-control", placeholder = "Apellido" })
                                @Html.ValidationMessageFor(a => a.Apellido, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.LabelFor(a => a.Email)
                                @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Correo electronico" })
                                @Html.ValidationMessageFor(a => a.Email, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.LabelFor(a => a.Telefono)
                                @Html.TextBoxFor(a => a.Telefono, new { @class = "form-control", placeholder = "Telefono" })
                                @Html.ValidationMessageFor(a => a.Telefono, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.LabelFor(a => a.Descripcion)
                                @Html.TextAreaFor(a => a.Descripcion, new { @class = "form-control", placeholder = "Mensaje" })
                                @Html.ValidationMessageFor(a => a.Descripcion, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
